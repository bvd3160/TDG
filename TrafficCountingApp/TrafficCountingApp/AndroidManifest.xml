<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.TDG.trafficcountingapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.TDG.trafficcountingapp.test" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_About"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".CountSetup"
            android:label="@string/title_activity_count_setup" >
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".IntersectionType"
            android:label="@string/title_activity_intersection_type" >
        </activity>
        <activity
            android:name=".CountingScreen"
            android:label="@string/title_activity_counting_screen" >
        </activity>
        <activity
            android:name=".CustomDialogs"
            android:label="@string/title_activity_counting_screen__dialog" >
        </activity>
    </application>

</manifest>
