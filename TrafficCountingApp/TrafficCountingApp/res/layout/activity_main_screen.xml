<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.TDG.trafficcountingapp.MainScreen$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/intersectionButton"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/grey"
            android:onClick="intersectionCountSetup"
            android:text="@string/intersectionButton"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/nonIntersectionButton"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/grey"
            android:onClick="nonIntersectionCountSetup"
            android:text="@string/nonIntersectionButton"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/grey"
            android:onClick="about"
            android:text="@string/aboutButton"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/helpButton"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/grey"
            android:onClick="help"
            android:text="@string/helpButton"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>